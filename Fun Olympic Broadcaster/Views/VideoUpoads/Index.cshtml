@model IEnumerable<Fun_Olympic_Broadcaster.Models.VideoUpoad>

@{
    ViewData["Title"] = "Index";
}

<h1>Games Management Home Page</h1>

<p>
    <a class="btn btn-success btn-lg" asp-action="Create">Create New</a>
</p>
<table class="table table-hover" id="tblData">
    <thead>
        <tr class="table-active table-bordered">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.thumbnail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rivals)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.videolink)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-dark">
                      
            <td class="font-weight-bold">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>

                <img src="@item.thumbnail" height="100" width="150">
                @*@Html.DisplayFor(modelItem => item.thumbnail)*@



            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rivals)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.videolink)
            </td>
            <td>
                <a class="badge bg-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                <br>
                    <a class="badge bg-info" asp-action="Details" asp-route-id="@item.Id">Details</a> <br>
                    <a class="badge bg-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts{
    <script src="~/js/Videojs.js"></script>
}

