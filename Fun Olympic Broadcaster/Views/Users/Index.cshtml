@model IEnumerable<Fun_Olympic_Broadcaster.Models.ApplicationUser>

@{
    ViewData["Title"] = "Index";
}

<h1>News Management Page</h1>

<p>
    <a class="btn btn-lg btn-primary"asp-area="Identity" asp-page="/Account/RegisterAdm">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr class="table-active table-bordered">
            <th>
                @Html.DisplayNameFor(model => model.FirsName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailConfirmed)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr class="table-dark">
            <td>
                @Html.DisplayFor(modelItem => item.FirsName)
                <br>
                    <a class="badge bg-danger" asp-area="Identity" asp-page="/Account/ForgotPassword">Reset Password</a>

                    @*                <img src="@item.thumbnail" height="100" width="150">*@

            </td>
            

           
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailConfirmed)
                </td>
            <td>
                    <a class="badge bg-primary" asp-action="Update" asp-route-id="@item.Id">Edit</a> |
                    <a class="badge bg-info" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="badge bg-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
